{
  "extends": [
    "next/core-web-vitals",
    "next/typescript"
  ],
  "rules":{ 
    "quotes": ["error", "double", { 
      "allowTemplateLiterals": true 
    }],
    "semi": ["error", "never"],
    "indent": ["error", 2],
    "comma-dangle": ["error", "never"],
    "no-unused-vars": "off",
    "@typescript-eslint/no-unused-vars": "off"
  }
}